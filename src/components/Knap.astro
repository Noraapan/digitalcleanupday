---

const { variant= "primary", size = "medium" } = Astro.props; 

const buttonStyling = "text-[var(--green)]"; 

const variantClasses = {
    "primary": "bg-[var(--lightgreen)] text-[var(--green)] hover:bg-[var(--lightgreen] rounded-3xl",
    "secondary": "bg-[var(--green)] hover:bg-[var(--green/75)] rounded-3xl text-[var(--lightgreen)]"
};


const sizeClasses = {
    "large": "px-8 py-2 text-xl",
    "medium": "px-4 py-1 text-lg",
    "small": "px-2 py-0.5 text-sm"
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>